<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

   <title>{% block title %}Accueil{% endblock %}</title>

    <!-- Bootstrap core CSS -->

    {% block stylesheets %}
      {% stylesheets 'bundles/app/css/*' filter='cssrewrite' %}
      <link rel="stylesheet" href="{{ asset_url }}" />
      <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">


      {% endstylesheets %}
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

  </head>

  <body>

    <nav class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">GESTION DE STOCK</a>
        </div>
        <div class="navbar-collapse collapse " id="collapsingNavbar">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <i class="fa fa-barcode"></i> Articles
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="/article"><i class="fa fa-barcode"></i> Liste des articles</a></li>
                <li class="divider"></li>
                <li><a href="/article/create"><i class="fa fa-plus"></i> Ajouter Article</a></li>
                <li class="divider"></li>
                <li><a href="/article/import"><i class="fa fa-plus"></i> Importer Article</a></li>
              </ul>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <i class="fa fa-cog"></i> Paramètres
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="#"><i class="fa fa-cog"></i> Paramètres</a></li>
                <li class="divider"></li>
                <li><a href="/categorie/list"><i class="fa fa-barcode"></i> Catégories</a></li>
                <li class="divider"></li>
                <li><a href="/categorie/create"> <i class="fa fa-plus"></i> Ajouter Catégorie</a></li>
                <li class="divider"></li>
                <li><a href="/categorie/import"><i class="fa fa-plus"></i> Import Catégorie</a></li>
                <li class="divider"></li>
                <li><a href="/Hopitale/list"><i class="fa fa-barcode"></i> Hopitales</a></li>
                <li class="divider"></li>
                <li><a href="/Hopitale/create"> <i class="fa fa-plus"></i> Ajouter Une Hopitale</a></li>
                <li class="divider"></li>
                <li><a href="/Service/list"><i class="fa fa-barcode"></i> Services</a></li>
                <li class="divider"></li>
                <li><a href="/Service/create"> <i class="fa fa-plus"></i> Ajouter Un Service</a></li>
              </ul>
          </li>
          <li class="dropdown">
              <a data-toggle="dropdown" class="logout dropdown-toggle" href="#">
                <i class="fa fa-user"></i> <span class="hidden-xs hidden-sm capitalize">admin</span>
              </a>
              <ul class="dropdown-menu extended pull-right">
                <div class="notify-arrow"></div>
                <li><a href="#"><i class="fa fa-user"></i> Profile</a></li>
                <li><a href="#"><i class="fa fa-sign-out"></i> Logout</a></li>
              </ul>
          </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                {% for flash_message in app.flashes('notice')%}
                <div class="alert alert-success">{{flash_message}}</div>
                {%endfor%}
                <section class="wrapper">
                  <div class="container">
                  {% block body %}{% endblock %}
                </div>
              </section>
            </div>
        </div>
    </div><!-- /.container -->
    {% javascripts '@AppBundle/Resources/public/js/*' %}
      <script src="{{ asset_url }}"></script>      
    {% endjavascripts %}
    <footer class="site-footer">
      <div class="text-center">
      © Gestion De Stocke 2017</div>
    </footer>
  </body>
</html>

